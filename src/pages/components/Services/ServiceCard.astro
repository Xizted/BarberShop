---
interface Props {
  gender: string;
  image: string;
  name: string;
  price: number;
}

import { Image } from 'astro:assets';
import { parseNumberToMoney } from '../../../utils/money';
import Card from './Card';
import { ClockIcon } from './ClockIcon';

const { gender, image, name, price } = Astro.props;
---

<Card client:visible image={image} title={name}>
  <Image
    src={image}
    alt={name}
    width={400}
    height={400}
    class='w-full select-none h-[300px] object-cover'
    decoding='async'
    loading='lazy'
  />
  <div class='p-4 grid gap-2'>
    <h3 class='text-lg font-bold mb-2'>{name}</h3>
    <p class='text-muted-foreground text-sm'>
      {gender}
    </p>
    <p class='font-bold text-lg'>
      {parseNumberToMoney(price)}
    </p>
    <div class="flex items-center text-muted-foreground text-sm">
      <ClockIcon client:visible className="mr-2 h-4 w-4" />
      <span>25 minutes</span>
    </div>
  </div>
</Card>
